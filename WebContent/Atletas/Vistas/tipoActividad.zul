<?page title="Actividad"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver" ?>
<?init class="org.zkoss.zkplus.databind.AnnotateDataBinderInit" ?>
<zk>
<zscript>
<![CDATA[ 
   modelo.TipoActividadSocial tA = new modelo.TipoActividadSocial();
   void guardar(){
	     tA.setCodigoActividadSocial("1");
	     tA.setEstatus("A");
	     servicioTipoActividadSocial.agregar(tA);
	     tA = new modelo.TipoActividadSocial();
	     binder.loadAll();
	     
   }
]]>
</zscript>
<window id="win" title="Actividad" border="normal" width="45%"
	closable="true">

	<grid id="gridActividad" style="border:none;" oddRowSclass="none">
		<columns>
			<column width="8%" />
			<column width="20%" />
		</columns>
		<rows>
			<row>
				<label value="CÃ³digo" />
				<textbox id="txtCodigo" width="90%" maxlength="5"
					disabled="true" value="@{tA.codigoActividadSocial}" />
			</row>
			<row>
				<label value="Nombre" />
				<div>
					<textbox id="txtNombre" width="90%" maxlength="80"
						constraint="no empty" focus="true" value="@{tA.nombre}" />
					<label value="(*)" style="color:red" />
				</div>
			</row>
		</rows>
	</grid>
	<div align="right">
		<button id="btnGuardar" label="Guardar"
			image="/Recursos/Imagenes/guardar.ico" orient="horizontal"
			width="100px" onClick="guardar()" />
		<button id="btnCancelar" label="Cancelar"
			image="/Recursos/Imagenes/cancelar.ico" orient="horizontal"
			width="100px" />
		<button id="btnSalir" label="Salir"
			image="Recursos/Imagenes/salir.png" orient="horizontal"
			width="100px">
			<attribute name="onClick"><![CDATA[
				win.detach();
			]]></attribute>
		</button>
	</div>

	<label value="(*) Estos campos son obligatorios" style="color:red" />
</window>
</zk>