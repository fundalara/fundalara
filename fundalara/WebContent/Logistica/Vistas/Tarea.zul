<?page title="Tarea" contentType="text/html;charset=UTF-8"?>
<zk>
	<window title="Tarea" border="normal" width="690px">
		<grid>
			<columns>
				<column></column>
				<column></column>
				<column></column>
				<column></column>
			</columns>

			<rows>
				<row>
					<label value="Código"></label>
					<textbox value="0003"></textbox>
				</row>
				<row>
					<label value="Nombre"></label>
					<textbox value="Marcar Campo"></textbox>
